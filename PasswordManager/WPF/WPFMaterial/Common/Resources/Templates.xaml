				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>


	<Style
		x:Key="Control-RectangleFocusVisualStylePlus3-Template"
		TargetType="Control">
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Rectangle
						Style="{StaticResource Rectangle-BaseRectangleFocusVisualStyle-Style}"
