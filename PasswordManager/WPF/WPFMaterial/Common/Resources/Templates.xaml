<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary
			Source="pack://application:,,,/WPFMaterial;component/Common/Resources/Styles.xaml"/>
	</ResourceDictionary.MergedDictionaries>


	<!--#region Controls-->
	<Style
		x:Key="Control-RectangleFocusVisualStyleMinus4-Template"
		TargetType="Control">
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Rectangle
						Style="{StaticResource Rectangle-BaseRectangleFocusVisualStyle-Style}"
						Margin="-4"/>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>


	<Style
		x:Key="Control-RectangleFocusVisualStyleMinus3-Template"
		TargetType="Control">
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Rectangle
						Style="{StaticResource Rectangle-BaseRectangleFocusVisualStyle-Style}"
						Margin="-3"/>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>


	<Style
		x:Key="Control-RectangleFocusVisualStyleMinus2-Template"
		TargetType="Control">
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Rectangle
						Style="{StaticResource Rectangle-BaseRectangleFocusVisualStyle-Style}"
						Margin="-2"/>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>


	<Style
		x:Key="Control-RectangleFocusVisualStylePlus2-Template"
		TargetType="Control">
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Rectangle
						Style="{StaticResource Rectangle-BaseRectangleFocusVisualStyle-Style}"
